.hero_wrap {
    height: auto;
    zoom: 1;
    overflow: hidden;
    padding: 0 10rpx;
    margin-top: 10px;
}
.tiele {
    height: 80rpx;
    width: 100%;
    padding: 0 2.5%;
    color: #888888;
    font-size: 36rpx;
    line-height: 80rpx;
    margin-bottom: 5px;
}
.tiele image {
    height: 70rpx;
    width: 70rpx;
    margin-right: 10px;
    margin-top: 5rpx;
    vertical-align: top;
}
.hero {
    width: 22.6%;
    height: 100%;
    color: #888888;
    font-size: 30rpx;
    text-align: center;
    float: left;
    margin: 10rpx 1.2%;
    padding: 20rpx 5rpx 10rpx;
    border: 1px solid #dedfe0; 
    box-shadow: 0px 0px 3px 1px #dedfe0;
}
.str {
     box-shadow: 0px 0px 3px 1px rgb(100, 50, 50) inset;
}
.agi {
     box-shadow: 0px 0px 3px 1px rgb(71, 109, 62) inset;
}
.int {
     box-shadow: 0px 0px 3px 1px rgb(74, 86, 167) inset;
}
.hero image {
    width: 100%;
    height: auto;
}
.hero text {
   overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: block;
    line-height: 40rpx;
}